              <!-- ngRepeat: choice in items --><li ng-repeat="choice in items" class="ng-scope">
                <a href="" class="ng-binding">The first choice!</a>
              </li><!-- end ngRepeat: choice in items --><li ng-repeat="choice in items" class="ng-scope">
                <a href="" class="ng-binding">And another choice for you.</a>
              </li><!-- end ngRepeat: choice in items --><li ng-repeat="choice in items" class="ng-scope">
                <a href="" class="ng-binding">but wait! A third!</a>
              </li><!-- end ngRepeat: choice in items -->
            </ul>
          </span>

          <!-- Single button -->
          <div class="btn-group" dropdown="" is-open="status.isopen">
            <button type="button" class="btn btn-primary" dropdown-toggle="" ng-disabled="disabled" aria-haspopup="true" aria-expanded="false" aria-disabled="false">
              Button dropdown <span class="caret"></span>
